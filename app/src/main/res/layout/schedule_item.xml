<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_lesson_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 урок"
        android:textColor="@color/darkest_gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lesson_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="8:00-8:45"
        android:textColor="@color/darkest_gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_lesson_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lesson_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кабинет 204"
        android:textColor="@color/darkest_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Русский язык"
        android:layout_marginTop="6dp"
        android:textColor="@color/light_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lesson_number"/>

    <TextView
        android:id="@+id/tv_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Упражнение 135, 137"
        android:layout_marginTop="6dp"
        android:textColor="@color/darkest_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_lesson_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/divider_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_homework"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>